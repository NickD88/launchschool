<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%=@title%></title>

</head>

<body>
  <h2>
    <%= @title %>
  </h2>

  <ul>
    <% @files.each do |file| %>
    <li>
      <a href="<%= file %>"><%= file %></a>
    </li>
    <% end %>
  </ul>

  <% if params[:sort] == "decending" %>
    <a href="/">Sort Assending</a>
  <% else %>
    <a href="?sort=decending">Sort Decending</a>
  <% end %>
</body>
